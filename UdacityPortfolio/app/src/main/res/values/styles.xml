<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="PortfolioButtonTheme">
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
        <item name="android:background">@color/accent</item>
    </style>

    <style name="PortfolioCapstoneButtonTheme" parent="PortfolioButtonTheme">
        <item name="android:background">@color/special</item>
    </style>

</resources>
